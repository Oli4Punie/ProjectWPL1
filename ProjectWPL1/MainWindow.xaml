                    <Button x:Name="BtnCursor" Content="Cursor" Width="266" Height="85"></Button>
                </WrapPanel>
                <WrapPanel>
                    <Button x:Name="BtnLeiding" Width="266" Content="Leiding" Height="85"></Button>
                </WrapPanel>
                <WrapPanel>
                    <Button x:Name="BtnKampvuur" Width="266" Content="Kampvuur" Height="85"></Button>
                </WrapPanel>
                <WrapPanel>
                    <Button x:Name="BtnMine" Width="266" Content="Mine" Height="85"></Button>
